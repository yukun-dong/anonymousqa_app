{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${title}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "The question below is just submitted for DevDiv China All hands:",
      "wrap": true,
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "${body}",
      "wrap": true,
      "weight": "bolder",
      "color": "accent"
    },
    {
      "type": "TextBlock",
      "text": "- All responses are anonymous\n- Click 'I like it' if you like this question.\n- Click 'Submit my question' to send your own question.",
      "wrap": true,
      "weight": "Bolder",
      "isSubtle": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "verb": "like",
          "title": "I like it",
          "data": {
            "id": "${questionId}",
            "question": "${questionText}"
          }
        },
        {
          "type": "Action.OpenUrl",
          "title": "Submit my question",
          "url": "https://forms.office.com/r/jwqRBirmHd"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}